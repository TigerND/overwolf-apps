{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "{{ pkg.name }}",
        "version": "{{ pkg.version }}",
        "description": "{{ pkg.description }}",
        "author": "{{ pkg.author.name }}",
        "icon": "icons/IconMouseOver.png",
        "icon_gray": "icons/IconMouseNormal.png",
        "minimum-overwolf-version": "0.77.14.0"
    },
    "data": {
        "start_window": "Main",
        "windows": {
            "Main": {
                "file": "main/index.html",
                "transparent": true,
                "resizable": true,
                "size": {
                    "width": 400,
                    "height": 50
                },
                "min_size": {
                    "width": 400,
                    "height": 50
                },
                "max_size": {
                    "width": 400,
                    "height": 400
                }
            }
        },
        "externally_connectable": {
	        "matches": [				
				"http://*.soundcloud.com",
				"https://*.soundcloud.com"
	        ]
    	}        
    }
}
